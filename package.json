{
  "name": "teammate",
  "version": "1.0.0",
  "description": "A team collaboration platform with workspace management",
  "private": true,
  "workspaces": [
    "backend",
    "client"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:client\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:backend && npm run build:client",
    "build:backend": "cd backend && npm run build",
    "build:client": "cd client && npm run build",
    "start": "npm run start:backend",
    "start:backend": "cd backend && npm run start",
    "install:all": "npm install && cd backend && npm install && cd ../client && npm install",
    "seed": "cd backend && npm run seed",
    "lint": "npm run lint:client",
    "lint:client": "cd client && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "team",
    "collaboration",
    "workspace",
    "project-management",
    "task-management"
  ],
  "author": "",
  "license": "ISC"
}
